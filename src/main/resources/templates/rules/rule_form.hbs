<form>
  <div class="card">
    <header class="card-header">
      <p class="card-header-title">
        Predicates
      </p>
    </header>
    <div class="card-content">
      <div class="content">
        <div class="columns">
          <div class="column">
            <div class="field">
              <label class="label">Type</label>
              <div class="control">
                <div class="select">
                  <label>
                    <select id="predicate-type-select">
                      <option></option>
                      <option value="equals">Equals</option>
                      <option value="regex">Regex matches</option>
                      <option value="greater">Greater than</option>
                      <option value="lower">Lower than</option>
                      <option disabled>──────────</option>
                      <option value="above">Above</option>
                      <option value="below">Below</option>
                      <option value="between">Between</option>
                      <option value="outside">Outside</option>
                      <option value="critical">Critical</option>
                    </select>
                  </label>
                </div>
              </div>
            </div>
            <div class="field">
              <label class="label">Arguments</label>
              <article class="message is-info is-hidden" id="arguments-help-message">
                <div class="message-body" id="arguments-help-message-body"></div>
              </article>
              <div class="control">
                <input class="input" type="text" placeholder="" id="predicate-arguments-input">
              </div>
              <p class="help">Function arguments separated with commas</p>
            </div>
            <div class="field is-grouped is-grouped-right">
              <button class="button is-link" id="predicate-add-button">Add predicate</button>
            </div>
          </div>
          <div class="column">
            <table>
              {{> rules/predicates_table}}
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="card">
    <header class="card-header">
      <p class="card-header-title">
        Action
      </p>
    </header>
    <div class="card-content">
      <div class="content">
        <div class="field">
          <label class="label">Function name</label>
          <div class="control">
            <input class="input" type="text" placeholder="">
          </div>
          <p class="help">Function to be called when all predicates are true</p>
        </div>
      </div>
    </div>
  </div>
  <div class="section">
    <div class="field is-grouped is-grouped-right">
      <div class="control">
        <button class="button is-link">Submit</button>
      </div>
      <div class="control">
        <button class="button is-text">Cancel</button>
      </div>
    </div>
  </div>
</form>


